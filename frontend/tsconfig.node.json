{
  "compilerOptions": {
    /* =========================================================================
     * CONFIGURACIÓN TYPESCRIPT PARA ARCHIVOS DE CONFIGURACIÓN DE NODE
     * =========================================================================
     * Se usa para vite.config.ts y otros archivos de configuración
     * ========================================================================= */
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": ["vite.config.ts"]
}
